@model IEnumerable<MVC_Grid_System.Entites.Personel>
@using GridMvc.Html

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2 class="text-center mt-2">PERSONEL LIST</h2>


@Html.Grid(Model).Columns(column =>
{
    column.Add(m => m.Ad).Titled("Names").Sortable(true).Filterable(true);
    column.Add(m => m.Soyad).Titled("Surnames").Sortable(true).Filterable(true);
    column.Add(m => m.Yas).Titled("Ages").Sortable(true).Filterable(true);
    column.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Edit", "Edit", "Grid", new { id = o.Id }, new { @class = "btn btn-warning" }));
    column.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Delete", "Delete", "Grid", new { id = o.Id }, new { @class = "btn btn-danger" }));

}).WithPaging(5)